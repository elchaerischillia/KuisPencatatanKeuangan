<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Kategori Transaksi"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_uang_masuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uang Masuk"
        app:layout_constraintTop_toBottomOf="@id/tv_kategori"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_uang_keluar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uang Keluar"
        app:layout_constraintTop_toBottomOf="@id/btn_uang_masuk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_semua_transaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semua Transaksi"
        app:layout_constraintTop_toBottomOf="@id/btn_uang_keluar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
